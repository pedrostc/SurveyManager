@using System.Web.Script.Services
@using SurveyManager.Presentation.MVC4.Models
@model IQueryable<ApplicationUser>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/jquerydt")

<h2>Users</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                E-mail
            </th>
            <th>
                Last Login
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    @Scripts.Render("~/Scripts/jquerydt")
    <script>
        $(document).ready(function() {
            $('.table').dataTable();
        });
    </script>
}
